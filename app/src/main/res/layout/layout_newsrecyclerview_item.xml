<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_height="151.1dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginRight="@dimen/d15"
        android:layout_marginLeft="@dimen/d15"
        android:background="#F7F7F7"
        android:orientation="horizontal"
        android:layout_height="150dp">
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:src="@mipmap/banner"
                android:layout_marginRight="@dimen/d10"
                android:layout_marginLeft="@dimen/d10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:textSize="@dimen/f11"
                android:textColor="#606060"
                android:text="@string/jingcai"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:textSize="@dimen/f11"
                android:maxLines="1"
                android:maxLength="15"
                android:ellipsize="end"
                android:layout_marginTop="@dimen/d15"
                android:textColor="@color/gray_Overall_hint"
                android:text="@string/jingcai_two"
                android:layout_width="wrap_content"

                android:layout_height="wrap_content" />
            <TextView
                android:textSize="@dimen/f11"
                android:layout_marginTop="@dimen/d10"
                android:textColor="@color/gray_Overall_hint"
                android:text="@string/date_fen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:background="@color/gray_Overall_hint"
        android:layout_height="0.1dp"></View>

</LinearLayout>
