<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:orientation="vertical"

    android:background="@color/white"
    android:layout_height="250dp">

    <LinearLayout
        android:layout_weight="1.1"
        android:layout_marginLeft="@dimen/d20"
        android:layout_marginRight="@dimen/d20"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">





        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <com.example.yuzishun.deomlottery.my.custom.XCRoundImageView
                android:src="@mipmap/gray_icon"
                android:id="@+id/icon"
                android:layout_centerVertical="true"
                android:layout_width="@dimen/d40"
                android:layout_height="@dimen/d40" />


            <TextView
                android:text="我们仍然未知"
                android:id="@+id/username"
                android:textColor="@color/font_black_shen"
                android:textSize="@dimen/f11"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/icon"
                android:layout_marginLeft="@dimen/d10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:text="04-15  23:50 截止"
                android:id="@+id/text_time"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:textColor="@color/gray_Overall_hint"
                android:textSize="@dimen/f9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/text_dec"
                android:text="周一低调一点，本单sp3+最近几天总是一红一黑，该连红了，不多比比，战绩说话 !"
                android:layout_width="wrap_content"
                android:textSize="@dimen/f11"
                android:textColor="@color/font_black_shen"
                android:layout_height="wrap_content" />


        </LinearLayout>



    </LinearLayout>

    <RelativeLayout
        android:layout_weight="1"
        android:layout_marginLeft="@dimen/d20"
        android:layout_marginRight="@dimen/d20"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:id="@+id/layout_one"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.example.yuzishun.deomlottery.my.custom.MyTableTextView
                android:id="@+id/list_1_1"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:layout_alignBottom="@+id/list_1_2"
                android:layout_alignTop="@+id/list_1_2"
                android:gravity="center"
                android:textColor="@color/font_gray"

                android:textSize="10sp" />

            <com.example.yuzishun.deomlottery.my.custom.MyTableTextView
                android:id="@+id/list_1_2"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:layout_toRightOf="@+id/list_1_1"
                android:gravity="center"
                android:textColor="@color/font_gray"

                android:textSize="10sp" />

            <com.example.yuzishun.deomlottery.my.custom.MyTableTextView
                android:id="@+id/list_1_3"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:layout_alignBottom="@+id/list_1_2"
                android:layout_alignTop="@+id/list_1_2"
                android:layout_toRightOf="@+id/list_1_2"
                android:gravity="center"
                android:textColor="@color/font_gray"

                android:textSize="10sp" />

            <com.example.yuzishun.deomlottery.my.custom.MyTableTextView
                android:id="@+id/list_1_4"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:layout_alignBottom="@+id/list_1_3"
                android:layout_alignTop="@+id/list_1_3"
                android:layout_toRightOf="@+id/list_1_3"
                android:gravity="center"
                android:textColor="@color/font_gray"

                android:textSize="10sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_below="@+id/layout_one"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.example.yuzishun.deomlottery.my.custom.MyTableTextView
                android:id="@+id/list_2_1"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:layout_alignBottom="@+id/list_1_2"
                android:layout_alignTop="@+id/list_1_2"
                android:gravity="center"
                android:textColor="@color/font_gray"

                android:textSize="10sp" />

            <com.example.yuzishun.deomlottery.my.custom.MyTableTextView
                android:id="@+id/list_2_2"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:layout_toRightOf="@+id/list_1_1"
                android:gravity="center"
                android:textColor="@color/font_gray"

                android:textSize="10sp" />

            <com.example.yuzishun.deomlottery.my.custom.MyTableTextView
                android:id="@+id/list_2_3"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:layout_alignBottom="@+id/list_1_2"
                android:layout_alignTop="@+id/list_1_2"
                android:layout_toRightOf="@+id/list_1_2"
                android:gravity="center"
                android:textColor="@color/font_gray"

                android:textSize="10sp" />

            <com.example.yuzishun.deomlottery.my.custom.MyTableTextView
                android:id="@+id/list_2_4"

                android:layout_width="80dp"
                android:layout_height="40dp"
                android:layout_alignBottom="@+id/list_1_3"
                android:layout_alignTop="@+id/list_1_3"
                android:layout_toRightOf="@+id/list_1_3"
                android:gravity="center"
                android:textColor="@color/font_gray"
                android:textSize="10sp" />
        </LinearLayout>
        <TextView
            android:id="@+id/text_type"
            android:text="竞彩类型: 足球"
            android:textSize="@dimen/f12"
            android:layout_marginBottom="@dimen/d15"

            android:layout_alignParentBottom="true"
            android:textColor="@color/font_gray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Button
            android:background="@drawable/login_shap"
            android:layout_width="70dp"
            android:text="跟单"
            android:id="@+id/document_shou_button_"
            android:textColor="@color/white"
            android:textSize="@dimen/f10"
            android:layout_marginBottom="@dimen/d10"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_height="30dp" />

    </RelativeLayout>
    <View
        android:background="@color/empt_color"
        android:layout_width="match_parent"
        android:layout_height="0.1dp">

    </View>
</LinearLayout>