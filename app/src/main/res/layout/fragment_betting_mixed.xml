<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.yuzishun.newdeom.main.mixed.BettingMixedFragment">

    <RelativeLayout
        android:layout_below="@+id/title"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.v4.widget.SwipeRefreshLayout
            android:id="@+id/layout_swipe"
            android:visibility="gone"
            android:layout_marginBottom="@dimen/d40"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.v7.widget.RecyclerView
                android:visibility="gone"
                android:layout_above="@+id/layout_bottom"
                android:id="@+id/Lottery_RecyCLerView"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            </android.support.v7.widget.RecyclerView>
        </android.support.v4.widget.SwipeRefreshLayout>

        <LinearLayout
            android:background="@color/white"
            android:visibility="gone"
            android:id="@+id/layout_bottom"
            android:orientation="horizontal"

            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="@dimen/d40">
            <LinearLayout
                android:layout_weight="2"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/Text_clear"
                    android:text="清空"
                    android:textColor="@color/login_red"
                    android:textSize="@dimen/f15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <TextView
                    android:id="@+id/Scene_TextView"
                    android:text="请至少选择两场比赛"
                    android:textSize="@dimen/f12"
                    android:textColor="@color/gray_Overall_hint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:layout_weight="2"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <Button
                    android:id="@+id/button_sure"
                    android:background="@drawable/login_select"
                    android:text="确定"
                    android:enabled="true"
                    android:textColor="@color/white"
                    android:textSize="@dimen/f13"
                    android:layout_width="@dimen/d60"
                    android:layout_height="26dp" />

            </LinearLayout>

        </LinearLayout>
        <TextView
            android:visibility="visible"
            android:id="@+id/Text_loading"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="正在加载..."
            android:textColor="@color/font_black"
            />
        <LinearLayout
            android:gravity="center"
            android:visibility="gone"
            android:id="@+id/layout_empt"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:src="@mipmap/empt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:text="暂时没有赛事信息哦~"
                android:textSize="@dimen/f12"
                android:layout_marginTop="@dimen/d5"
                android:textColor="@color/font_black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:text="赶紧去看看别的赛事吧"
                android:textSize="@dimen/f11"
                android:layout_marginTop="@dimen/d5"
                android:textColor="@color/font_black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>
    </RelativeLayout>

</LinearLayout>
