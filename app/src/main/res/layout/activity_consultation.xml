<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.yuzishun.deomlottery.main.activity.ConsultationActivity">
    <include layout="@layout/title_text"></include>



    <LinearLayout
        android:id="@+id/layout_title"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="@dimen/d40">

        <LinearLayout
            android:id="@+id/football_layout"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@color/white"

            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/football_img"
                android:background="@mipmap/football_consulta_false"
                android:layout_width="wrap_content"
                android:layout_marginTop="3dp"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/football_text"

                android:text="足球"
                android:gravity="center"
                android:textSize="@dimen/f13"
                android:textColor="@color/login_red"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/basket_layout"

            android:layout_weight="1"
            android:gravity="center"
            android:background="@color/new_gray_empt"

            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/basket_img"

                android:background="@mipmap/basket_consulta_false"
                android:layout_width="wrap_content"
                android:layout_marginTop="3dp"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/basket_text"
                android:text="篮球"

                android:gravity="center"
                android:textSize="@dimen/f13"
                android:textColor="@color/font_black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/Consulta_recyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


        </android.support.v7.widget.RecyclerView>


    </LinearLayout>

</LinearLayout>
