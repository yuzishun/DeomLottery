<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_marginLeft="@dimen/d20"
        android:layout_marginRight="@dimen/d20"
        android:orientation="vertical"
        android:layout_marginBottom="@dimen/d10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">





        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp">
            <com.example.yuzishun.newdeom.my.custom.XCRoundImageView
                android:src="@mipmap/gray_icon"
                android:id="@+id/icon"
                android:layout_centerVertical="true"
                android:layout_width="@dimen/d40"
                android:layout_height="@dimen/d40" />


            <TextView
                android:text="我们仍然未知"
                android:id="@+id/username"
                android:textColor="@color/font_black_shen"
                android:textSize="@dimen/f13"
                android:layout_marginTop="@dimen/d15"
                android:layout_toRightOf="@+id/icon"
                android:layout_marginLeft="@dimen/d10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:text="昨天11:34"
                android:id="@+id/Text_time"
                android:layout_below="@+id/username"
                android:textColor="@color/gray_Overall_hint"
                android:textSize="@dimen/f11"
                android:layout_toRightOf="@+id/icon"
                android:layout_marginLeft="@dimen/d10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:text="¥：40145"
                android:id="@+id/text_money"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:textColor="@color/login_red"
                android:textSize="@dimen/f12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:gravity="center_vertical"

            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/text_dec"

                android:text="周一低调一点，本单sp3+最近几天总是一红一黑，该连红了，不多比比，战绩说话 !"
                android:layout_width="wrap_content"
                android:textSize="@dimen/f11"

                android:textColor="@color/font_black_shen"
                android:layout_height="wrap_content" />


        </LinearLayout>



    </LinearLayout>

    <RelativeLayout
        android:layout_marginLeft="@dimen/d20"
        android:layout_marginRight="@dimen/d20"
        android:layout_width="match_parent"
        android:layout_height="120dp">


        <LinearLayout
            android:id="@+id/layout_one"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.example.yuzishun.newdeom.my.custom.MyTableTextView
                android:id="@+id/list_1_1"
                android:layout_width="80dp"
                android:text="竞猜类型"
                android:layout_height="40dp"
                android:layout_alignBottom="@+id/list_1_2"
                android:layout_alignTop="@+id/list_1_2"
                android:gravity="center"
                android:textColor="@color/font_gray"

                android:textSize="10sp" />

            <com.example.yuzishun.newdeom.my.custom.MyTableTextView
                android:text="方案金额"
                android:id="@+id/list_1_2"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:layout_toRightOf="@+id/list_1_1"
                android:gravity="center"
                android:textColor="@color/font_gray"

                android:textSize="10sp" />

            <com.example.yuzishun.newdeom.my.custom.MyTableTextView
                android:id="@+id/list_1_3"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:text="中奖金额"
                android:layout_alignBottom="@+id/list_1_2"
                android:layout_alignTop="@+id/list_1_2"
                android:layout_toRightOf="@+id/list_1_2"
                android:gravity="center"
                android:textColor="@color/font_gray"

                android:textSize="10sp" />

            <com.example.yuzishun.newdeom.my.custom.MyTableTextView
                android:id="@+id/list_1_4"
                android:layout_width="80dp"
                android:text="倍数"
                android:layout_height="40dp"
                android:layout_alignBottom="@+id/list_1_3"
                android:layout_alignTop="@+id/list_1_3"
                android:layout_toRightOf="@+id/list_1_3"
                android:gravity="center"
                android:textColor="@color/font_gray"

                android:textSize="10sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_below="@+id/layout_one"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.example.yuzishun.newdeom.my.custom.MyTableTextView
                android:id="@+id/list_2_1"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:layout_alignBottom="@+id/list_1_2"
                android:layout_alignTop="@+id/list_1_2"
                android:gravity="center"
                android:textColor="@color/font_gray"
                android:text="足球"

                android:textSize="10sp" />

            <com.example.yuzishun.newdeom.my.custom.MyTableTextView
                android:id="@+id/list_2_2"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:layout_toRightOf="@+id/list_1_1"
                android:gravity="center"
                android:textColor="@color/font_gray"
                android:text="2.0元"

                android:textSize="10sp" />

            <com.example.yuzishun.newdeom.my.custom.MyTableTextView
                android:id="@+id/list_2_3"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:layout_alignBottom="@+id/list_1_2"
                android:layout_alignTop="@+id/list_1_2"
                android:layout_toRightOf="@+id/list_1_2"
                android:gravity="center"
                android:textColor="@color/font_gray"
                android:text="100元"

                android:textSize="10sp" />

            <com.example.yuzishun.newdeom.my.custom.MyTableTextView
                android:id="@+id/list_2_4"

                android:layout_width="80dp"
                android:layout_height="40dp"
                android:layout_alignBottom="@+id/list_1_3"
                android:layout_alignTop="@+id/list_1_3"
                android:layout_toRightOf="@+id/list_1_3"
                android:gravity="center"
                android:text="10倍"

                android:textColor="@color/font_gray"
                android:textSize="10sp" />
        </LinearLayout>



        <LinearLayout
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="@dimen/d15"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:visibility="gone"
                android:background="@mipmap/sunsheetmsg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />



            <TextView
                android:visibility="gone"
                android:id="@+id/comment_count"
                android:text="120"
                android:layout_marginLeft="@dimen/d5"
                android:textSize="@dimen/f11"
                android:textColor="@color/gray_Overall_hint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:id="@+id/Fabulous"
                android:background="@mipmap/dianzan"
                android:layout_marginLeft="@dimen/d5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />



            <TextView
                android:id="@+id/Fabulous_TextView"
                android:text="120"
                android:layout_marginLeft="@dimen/d5"
                android:textSize="@dimen/f11"
                android:textColor="@color/gray_Overall_hint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


        </LinearLayout>

    </RelativeLayout>
    <View
        android:background="@color/new_gray_empt"
        android:layout_width="match_parent"
        android:layout_height="10dp">

    </View>

</LinearLayout>
