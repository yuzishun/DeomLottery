<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.yuzishun.newdeom.documentary.activity.SearchActivity">


    <RelativeLayout
       android:layout_width="match_parent"
        android:background="@color/login_red"
        android:layout_height="@dimen/d40">
        <LinearLayout
            android:id="@+id/layout_title_bar"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <com.example.yuzishun.newdeom.login.custom.ClearEditText

                android:id="@+id/title_text"
                android:hint="搜索用户名"
                android:maxLines="1"
                android:background="@null"
                android:textColorHint="@color/white"
                android:drawableBottom="@drawable/line"
                android:layout_marginLeft="@dimen/d40"
                android:layout_marginRight="@dimen/d40"
                android:textColor="@color/white"
                android:textSize="@dimen/f14"
                android:layout_marginBottom="@dimen/d5"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/image_back"
            android:layout_centerVertical="true"
            android:layout_width="40dp"
            android:gravity="center"
            android:layout_height="match_parent">
            <ImageView
                android:layout_centerVertical="true"
                android:src="@mipmap/back"
                android:layout_width="@dimen/d15"
                android:layout_height="@dimen/d15" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/image_seach"
            android:visibility="visible"
            android:layout_centerVertical="true"
            android:layout_width="40dp"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:layout_height="match_parent">

            <TextView
                android:text="搜索"
                android:textColor="@color/white"
                android:textSize="@dimen/f12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>


    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.v7.widget.RecyclerView
            android:visibility="visible"
            android:id="@+id/Search_RecyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </android.support.v7.widget.RecyclerView>

        <TextView
            android:visibility="gone"
            android:id="@+id/Text_loading"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="暂无数据"
            android:textColor="@color/font_black"
            />

    </LinearLayout>


</LinearLayout>
