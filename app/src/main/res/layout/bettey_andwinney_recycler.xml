<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_height="@dimen/d120">


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="119dp">

        <LinearLayout
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/d25"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/gmae_type"
                android:text="竞彩足球-普通投注"
                android:textSize="@dimen/f14"
                android:textColor="@color/font_black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/game_time"
                android:text="2019-04-25"
                android:textSize="@dimen/f12"
                android:layout_marginTop="@dimen/d10"
                android:textColor="@color/font_black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:text="金额消费2.00元"
                android:layout_marginTop="@dimen/d10"
                android:id="@+id/game_money"
                android:textSize="@dimen/f12"
                android:textColor="@color/font_black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_weight="2"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="已中奖"
                android:id="@+id/state_betteyandwinnit"
                android:textColor="@color/login_red"
                android:textSize="@dimen/f12"
                />
        </LinearLayout>

    </LinearLayout>

    <View
        android:background="@color/edittext_hintcolor"
        android:layout_width="match_parent"
        android:layout_height="0.1dp"></View>
</LinearLayout>