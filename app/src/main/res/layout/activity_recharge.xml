<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.yuzishun.newdeom.my.activity.RechargeActivity">

    <include layout="@layout/title_text"></include>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/d30"
            android:layout_weight="5"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/yue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="账户余额"
                android:textColor="@color/font_black"
                android:textSize="@dimen/f13" />

            <TextView
                android:id="@+id/money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/yue"
                android:layout_marginTop="@dimen/d5"
                android:text="0.0"
                android:textColor="@color/login_red"
                android:textSize="@dimen/f18" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/yue"
                android:layout_marginLeft="@dimen/d2"
                android:layout_marginTop="@dimen/d10"
                android:layout_toRightOf="@+id/money"
                android:text="元"
                android:textColor="@color/font_black"
                android:textSize="@dimen/f12" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/d10"
            android:background="@color/empt_color"></View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/white"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="4"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/d30"
                        android:layout_weight="2">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="4"
                            android:gravity="center_vertical"
                            android:text="充值金额"
                            android:textColor="@color/font_black"
                            android:textSize="@dimen/f13" />

                        <com.example.yuzishun.newdeom.login.custom.ClearEditText
                            android:id="@+id/money_edit"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginRight="35dp"
                            android:layout_weight="1"
                            android:background="@null"
                            android:hint="请输入充值金额,10-5000元"
                            android:inputType="numberDecimal"
                            android:maxLength="11"
                            android:maxLines="1"
                            android:paddingLeft="@dimen/d5"
                            android:textColorHint="@color/edittext_hintcolor"
                            android:textSize="@dimen/f11" />


                    </LinearLayout>



                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:background="@color/empt_color"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">


                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/Pay_recyclerView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">


                    </android.support.v7.widget.RecyclerView>




                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.3"
                android:background="@color/empt_color">


            </LinearLayout>

        </LinearLayout>


    </LinearLayout>


</LinearLayout>
