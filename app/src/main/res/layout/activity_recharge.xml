<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.yuzishun.newdeom.my.activity.RechargeActivity">
    <include layout="@layout/title_text"></include>


    <LinearLayout
        android:background="@color/white"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:background="@color/white"
            android:layout_weight="5"
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:layout_marginLeft="@dimen/d30"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/yue"
                android:text="账户余额"
                android:textSize="@dimen/f13"
                android:textColor="@color/font_black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:text="0.0"
                android:id="@+id/money"
                android:layout_below="@+id/yue"
                android:textSize="@dimen/f18"
                android:layout_marginTop="@dimen/d5"
                android:textColor="@color/login_red"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:text="元"
                android:layout_below="@+id/yue"
                android:layout_toRightOf="@+id/money"
                android:textSize="@dimen/f12"
                android:layout_marginTop="@dimen/d10"
                android:layout_marginLeft="@dimen/d2"
                android:textColor="@color/font_black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <View
            android:background="@color/empt_color"
            android:layout_width="match_parent"
            android:layout_height="@dimen/d10"></View>
        <LinearLayout
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_weight="1"
                android:orientation="vertical"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_weight="4"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:layout_weight="2"
                        android:layout_marginLeft="@dimen/d30"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:layout_weight="4"
                            android:gravity="center_vertical"
                            android:text="充值金额"
                            android:textColor="@color/font_black"
                            android:textSize="@dimen/f13"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />
                        <com.example.yuzishun.newdeom.login.custom.ClearEditText
                            android:id="@+id/money_edit"
                            android:maxLines="1"
                            android:inputType="numberDecimal"
                            android:layout_weight="1"
                            android:paddingLeft="@dimen/d5"
                            android:maxLength="11"
                            android:background="@null"
                            android:hint="请输入充值金额,10-5000元"
                            android:textColorHint="@color/edittext_hintcolor"
                            android:textSize="@dimen/f11"
                            android:layout_marginRight="35dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />



                    </LinearLayout>
                    <LinearLayout
                        android:layout_weight="1"
                        android:visibility="gone"

                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <GridView
                            android:id="@+id/GridView_recharge_Money"
                            android:gravity="center"
                            android:numColumns="3"
                            android:verticalSpacing="@dimen/d15"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                        </GridView>




                    </LinearLayout>

                </LinearLayout>
                <LinearLayout
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <View
                        android:background="@color/empt_color"
                        android:layout_width="match_parent"
                        android:layout_height="0.1dp">

                    </View>
                    <LinearLayout
                        android:id="@+id/layout_pay"
                        android:orientation="horizontal"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <RelativeLayout
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <ImageView
                                android:id="@+id/image1"
                                android:src="@mipmap/zhifubao"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="@dimen/d20"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                            <TextView
                                android:text="@string/pay_froi"
                                android:layout_toRightOf="@+id/image1"
                                android:layout_marginLeft="@dimen/d10"
                                android:textColor="@color/font_black"
                                android:layout_centerVertical="true"
                                android:textSize="@dimen/f13"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                        </RelativeLayout>
                        <RelativeLayout
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <ImageView
                                android:layout_centerVertical="true"
                                android:layout_alignParentRight="true"
                                android:layout_marginRight="@dimen/d20"
                                android:background="@mipmap/goright"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />


                        </RelativeLayout>
                    </LinearLayout>
                    <View
                        android:background="@color/empt_color"
                        android:layout_width="match_parent"
                        android:layout_height="0.1dp">

                    </View>
                    <LinearLayout
                        android:layout_weight="1"
                        android:background="@color/empt_color"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <RelativeLayout
                            android:layout_weight="1"
                            android:visibility="gone"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <ImageView
                                android:id="@+id/image2"
                                android:src="@mipmap/bankcard"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="@dimen/d20"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                            <TextView
                                android:text="@string/quict_pay"
                                android:layout_toRightOf="@+id/image2"
                                android:layout_marginLeft="@dimen/d10"
                                android:textColor="@color/font_black"
                                android:layout_centerVertical="true"
                                android:textSize="@dimen/f12"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                        </RelativeLayout>
                        <RelativeLayout
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <ImageView
                                android:visibility="gone"
                                android:layout_centerVertical="true"
                                android:layout_alignParentRight="true"
                                android:layout_marginRight="@dimen/d20"
                                android:background="@mipmap/goright"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />


                        </RelativeLayout>
                    </LinearLayout>
                    <View
                        android:visibility="gone"
                        android:background="@color/empt_color"
                        android:layout_width="match_parent"
                        android:layout_height="0.1dp">

                    </View>
                    <LinearLayout
                        android:background="@color/empt_color"
                        android:id="@+id/layout_lineMoney"
                        android:layout_weight="0.5"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <RelativeLayout
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <ImageView
                                android:id="@+id/image3"
                                android:visibility="gone"
                                android:src="@mipmap/bankcard"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="@dimen/d20"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                            <TextView
                                android:text="@string/xianxia_moeny"
                                android:visibility="gone"
                                android:layout_toRightOf="@+id/image3"
                                android:layout_marginLeft="@dimen/d10"
                                android:textColor="@color/font_black"
                                android:layout_centerVertical="true"
                                android:textSize="@dimen/f12"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                        </RelativeLayout>
                        <RelativeLayout
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <ImageView
                                android:visibility="gone"
                                android:layout_centerVertical="true"
                                android:layout_alignParentRight="true"
                                android:layout_marginRight="@dimen/d20"
                                android:background="@mipmap/goright"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />


                        </RelativeLayout>
                    </LinearLayout>


                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_weight="1.3"
                android:background="@color/empt_color"
                android:layout_width="match_parent"
                android:layout_height="match_parent">


            </LinearLayout>

        </LinearLayout>



    </LinearLayout>


</LinearLayout>
