<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.yuzishun.newdeom.my.activity.SendDocumentActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/login_red"
        android:layout_height="@dimen/d40">

        <LinearLayout
            android:id="@+id/layout_title_bar"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:text=""
                android:id="@+id/title_text"
                android:gravity="center"
                android:ellipsize="end"
                android:maxEms="8"
                android:maxLines="1"

                android:layout_marginLeft="@dimen/d40"
                android:layout_marginRight="@dimen/d40"
                android:textColor="@color/white"
                android:textSize="@dimen/f16"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/image_back_left"
            android:layout_centerVertical="true"
            android:layout_width="40dp"
            android:gravity="center"
            android:layout_height="match_parent">
            <ImageView
                android:layout_centerVertical="true"
                android:src="@mipmap/back"
                android:layout_width="@dimen/d15"
                android:layout_height="@dimen/d15" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/image_back_right"
            android:layout_centerVertical="true"
            android:layout_width="40dp"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:layout_height="match_parent">
            <ImageView
                android:layout_centerVertical="true"
                android:src="@mipmap/question"
                android:layout_width="@dimen/d15"
                android:layout_height="@dimen/d15" />
        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:background="@color/white"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_weight="1.2"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_weight="1.5"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:text="跟单金额 50倍 共2元"
                    android:layout_marginLeft="@dimen/d25"
                    android:textSize="@dimen/f12"
                    android:textColor="@color/font_black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_weight="2"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:text="方案是否公开"
                        android:layout_marginLeft="@dimen/d25"
                        android:textSize="@dimen/f12"
                        android:textColor="@color/font_black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>


                <LinearLayout
                    android:layout_weight="1"
                    android:gravity="center_vertical"

                    android:layout_marginLeft="@dimen/d25"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">


                    <Button
                        android:id="@+id/Button_one"
                        android:text="完全公开"
                        android:textSize="@dimen/f10"

                        android:textColor="@color/white"
                        android:layout_marginBottom="@dimen/d5"
                        android:layout_marginTop="@dimen/d5"
                        android:background="@drawable/sendorder_shape_red"
                        android:layout_width="65dp"
                        android:layout_height="20dp" />
                    <Button
                        android:text="截止后公开"
                        android:id="@+id/Button_two"

                        android:textSize="@dimen/f10"

                        android:textColor="@color/font_black"
                        android:layout_marginLeft="@dimen/d10"
                        android:layout_marginBottom="@dimen/d5"
                        android:layout_marginTop="@dimen/d5"
                        android:background="@drawable/sendorder_shape"
                        android:layout_width="65dp"
                        android:layout_height="20dp" />
                    <Button
                        android:id="@+id/Button_three"
                        android:layout_marginBottom="@dimen/d5"
                        android:layout_marginLeft="@dimen/d10"
                        android:layout_marginTop="@dimen/d5"
                        android:text="跟单可见"
                        android:textSize="@dimen/f10"
                        android:textColor="@color/font_black"
                        android:background="@drawable/sendorder_shape"
                        android:layout_width="65dp"
                        android:layout_height="20dp" />

                </LinearLayout>



            </LinearLayout>

        </LinearLayout>
        <View
            android:background="@color/empt_color"
            android:layout_width="match_parent"
            android:layout_height="@dimen/d10"></View>
        <LinearLayout
            android:layout_weight="1.1"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:text="文案提成"
                    android:textSize="@dimen/f12"
                    android:textColor="@color/font_black"
                    android:layout_marginLeft="@dimen/d25"
                    android:layout_marginTop="@dimen/d10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <Button
                    android:text="净利润"
                    android:textSize="@dimen/f10"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="@dimen/d25"
                    android:textColor="@color/white"
                    android:layout_marginBottom="@dimen/d7"
                    android:layout_marginTop="@dimen/d5"
                    android:background="@drawable/sendorder_shape_red"
                    android:layout_width="65dp"
                    android:layout_height="20dp" />
            </RelativeLayout>
            <LinearLayout
                android:layout_weight="1.1"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <GridView
                    android:id="@+id/GridView_sendorder"
                    android:gravity="center"
                    android:numColumns="5"
                    android:layout_marginLeft="@dimen/d25"
                    android:layout_marginRight="@dimen/d25"
                    android:verticalSpacing="@dimen/d15"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </GridView>

            </LinearLayout>
            <LinearLayout
                android:layout_weight="1.3"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:text="净利润=(税后奖金-订单总本金)  *方案提成比例"
                    android:textSize="@dimen/f10"
                    android:textColor="@color/login_red"
                    android:layout_marginLeft="@dimen/d25"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>
        <View
            android:background="@color/empt_color"
            android:layout_width="match_parent"
            android:layout_height="@dimen/d10"></View>
        <LinearLayout
            android:layout_weight="0.9"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_weight="1.8"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:text="文案宣言"
                    android:textSize="@dimen/f12"
                    android:textColor="@color/font_black"
                    android:layout_marginLeft="@dimen/d25"
                    android:layout_marginTop="@dimen/d10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <com.example.yuzishun.newdeom.login.custom.ClearEditText
                    android:inputType="number"
                    android:layout_weight="1"
                    android:paddingLeft="@dimen/d10"
                    android:id="@+id/phoneEditText"
                    android:paddingTop="@dimen/d10"

                    android:background="@color/empt_color"
                    android:layout_marginLeft="@dimen/d15"
                    android:textColorHint="@color/edittext_hintcolor"
                    android:textSize="@dimen/f12"
                    android:gravity="left"
                    android:layout_marginRight="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </LinearLayout>
            <LinearLayout
                android:layout_weight="1.6"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <Button
                    android:id="@+id/button_resign"
                    android:background="@drawable/login_select"
                    android:text="立即发单"
                    android:layout_centerHorizontal="true"
                    android:enabled="true"
                    android:textColor="@color/white"
                    android:textSize="@dimen/f12"
                    android:layout_width="280dp"
                    android:layout_height="40dp" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
