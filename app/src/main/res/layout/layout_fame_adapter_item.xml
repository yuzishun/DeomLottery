<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="165dp"
    android:background="@color/white"

    android:layout_height="80dp">

    <LinearLayout
        android:layout_width="match_parent"

        android:orientation="horizontal"
        android:background="@drawable/layer_shadow_main"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_weight="2"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.example.yuzishun.deomlottery.my.custom.XCRoundImageView
                android:id="@+id/icon"
                android:src="@mipmap/icon"


                android:layout_width="40dp"
                android:layout_height="40dp" />



        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/name_fame"
                    android:text="我叫艾瑞莉娅"
                    android:textColor="@color/font_black"
                    android:textSize="@dimen/f11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:gravity="center_vertical"

                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:text="中奖"
                    android:textColor="@color/font_black"
                    android:textSize="@dimen/f12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/money_fame"
                    android:text="15465"
                    android:textColor="@color/login_red"
                    android:textSize="@dimen/f12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:text="元"
                    android:textColor="@color/font_black"
                    android:textSize="@dimen/f12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>


        </LinearLayout>
    </LinearLayout>

</LinearLayout>