<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:background="@color/white"

    android:layout_height="80dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/d20"
        android:layout_marginRight="@dimen/d20"
        android:layout_marginTop="@dimen/d5"
        android:orientation="horizontal"
        android:background="@color/main_list_item_color"
        android:layout_marginBottom="@dimen/d5"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.example.yuzishun.newdeom.my.custom.XCRoundImageView
                android:id="@+id/icon"
                android:src="@mipmap/icon"

                android:layout_marginLeft="@dimen/d25"

                android:layout_width="40dp"
                android:layout_height="40dp" />

            <TextView
                android:id="@+id/name_fame"
                android:text="我叫艾瑞莉娅"
                android:textColor="@color/font_black"
                android:layout_marginLeft="@dimen/d5"
                android:textSize="@dimen/f12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/money_fame"
                android:text="15465元"
                android:textColor="@color/login_red"
                android:textSize="@dimen/f17"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:text="中奖金额"
                android:textColor="@color/font_black"
                android:textSize="@dimen/f12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>