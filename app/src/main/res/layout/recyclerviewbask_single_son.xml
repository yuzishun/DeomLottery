<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_height="140dp">
    <LinearLayout
        android:layout_weight="2"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_weight="3"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:text="澳超"
                android:id="@+id/Text_diqu"
                android:textColor="@color/font_black"
                android:textSize="@dimen/f12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_weight="1.5"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:text="布里斯班狮吼"
                    android:id="@+id/Text_left"
                    android:textSize="@dimen/f12"
                    android:textColor="@color/font_black"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:layout_weight="1.5"
                android:gravity="center"
                android:id="@+id/layout_analysis"

                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:src="@mipmap/mixed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:text="分析"
                    android:textSize="@dimen/f9"
                    android:textColor="@color/font_black"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <RelativeLayout
                android:layout_weight="1.2"
                android:gravity="left"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/Text_right"

                    android:text="布里斯班狮吼"
                    android:layout_centerVertical="true"
                    android:textSize="@dimen/f12"
                    android:textColor="@color/font_black"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>





        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_weight="1"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_weight="3"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/Text_bianhao"
                    android:text="001"
                    android:textSize="@dimen/f12"
                    android:textColor="@color/font_black"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:text="截止11:50"
                    android:id="@+id/Text_data"
                    android:textSize="@dimen/f11"
                    android:layout_marginTop="@dimen/d20"
                    android:textColor="@color/edittext_hintcolor"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:layout_weight="3"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:id="@+id/layout_gone"
                    android:orientation="vertical"
                    android:background="@color/white"
                    android:layout_weight="1"
                    android:visibility="gone"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">



                    <Button
                        android:id="@+id/button_Difference"
                        android:text="点击展开投注页"
                        android:textSize="@dimen/f12"
                        android:gravity="center"
                        android:layout_marginRight="@dimen/d10"
                        android:layout_marginLeft="@dimen/d10"
                        android:background="@drawable/dialog_mixed_false"
                        android:textColor="@color/font_black"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/d30" />




                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_visito"
                    android:orientation="horizontal"
                    android:background="@color/white"
                    android:layout_weight="1"

                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">



                    <Button
                        android:id="@+id/button_left"
                        android:text="主负2.42"
                        android:textSize="@dimen/f12"
                        android:gravity="center"
                        android:layout_marginRight="@dimen/d20"
                        android:layout_marginLeft="@dimen/d10"
                        android:background="@drawable/dialog_mixed_false"
                        android:textColor="@color/font_black"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/d30" />


                    <TextView

                        android:text="主3.5"
                        android:layout_centerVertical="true"
                        android:layout_centerHorizontal="true"
                        android:textSize="@dimen/f10"
                        android:id="@+id/text_center_socre"
                        android:textColor="@color/login_red"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <Button
                        android:id="@+id/button_right"
                        android:text="主胜2.12"
                        android:textSize="@dimen/f12"
                        android:gravity="center"

                        android:layout_marginRight="@dimen/d10"
                        android:layout_marginLeft="@dimen/d20"
                        android:background="@drawable/dialog_mixed_false"
                        android:textColor="@color/font_black"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/d30" />


                </LinearLayout>










            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

    <View
        android:background="@color/empt_color"
        android:layout_width="match_parent"
        android:layout_height="@dimen/d10">


    </View>
</LinearLayout>